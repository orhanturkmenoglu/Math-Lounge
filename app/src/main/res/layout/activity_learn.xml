<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_one"
    tools:context=".LearnActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="85dp">
            <ImageView
                android:clickable="true"
                android:onClick="onButtonExit"
                android:id="@+id/imgExit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_close"></ImageView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_tables"
                android:orientation="vertical"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:fontFamily="@font/boogaloo_regular"
                        android:gravity="center"
                        android:text="1 x 1 = 1"
                        android:textSize="25dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:fontFamily="@font/boogaloo_regular"
                        android:gravity="center"
                        android:text="1 x 2 = 2"
                        android:textSize="25dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:fontFamily="@font/boogaloo_regular"
                        android:gravity="center"
                        android:text="1 x 3 = 3"
                        android:textSize="25dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:fontFamily="@font/boogaloo_regular"
                        android:gravity="center"
                        android:text="1 x 4 = 4"
                        android:textSize="25dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:fontFamily="@font/boogaloo_regular"
                        android:gravity="center"
                        android:text="1 x 5 = 5"
                        android:textSize="25dp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_tables"
                android:orientation="vertical"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:fontFamily="@font/boogaloo_regular"
                        android:gravity="center"
                        android:text="1 x 6 = 6"
                        android:textSize="25dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:fontFamily="@font/boogaloo_regular"
                        android:gravity="center"
                        android:text="1 x 7 = 7"
                        android:textSize="25dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:fontFamily="@font/boogaloo_regular"
                        android:gravity="center"
                        android:text="1 x 8 = 8"
                        android:textSize="25dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:fontFamily="@font/boogaloo_regular"
                        android:gravity="center"
                        android:text="1 x 9 = 9"
                        android:textSize="25dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:fontFamily="@font/boogaloo_regular"
                        android:gravity="center"
                        android:text="1 x 10 = 10"
                        android:textSize="25dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/btn1"
                android:clickable="true"
                android:onClick="onButtonClick"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="3dp"
                android:fontFamily="@font/boogaloo_regular"
                android:background="@drawable/bg_tables_selector"
                android:text="1"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/btn2"
                android:clickable="true"
                android:onClick="onButtonClick"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="3dp"
                android:fontFamily="@font/boogaloo_regular"
                android:background="@drawable/bg_tables_selector"
                android:textSize="20dp"
                android:text="2"/>

            <Button
                android:id="@+id/btn3"
                android:clickable="true"
                android:onClick="onButtonClick"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="3dp"
                android:fontFamily="@font/boogaloo_regular"
                android:background="@drawable/bg_tables_selector"
                android:textSize="20dp"
                android:text="3"/>

            <Button
                android:id="@+id/btn4"
                android:clickable="true"
                android:onClick="onButtonClick"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="3dp"
                android:fontFamily="@font/boogaloo_regular"
                android:background="@drawable/bg_tables_selector"
                android:textSize="20dp"
                android:text="4"/>

            <Button
                android:id="@+id/btn5"
                android:clickable="true"
                android:onClick="onButtonClick"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:fontFamily="@font/boogaloo_regular"
                android:textSize="20dp"
                android:background="@drawable/bg_tables_selector"
                android:text="5"/>








        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <Button
                android:id="@+id/btn6"
                android:clickable="true"
                android:onClick="onButtonClick"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="3dp"
                android:fontFamily="@font/boogaloo_regular"
                android:textSize="20dp"
                android:background="@drawable/bg_tables_selector"
                android:text="6"/>
            <Button
                android:id="@+id/btn7"
                android:clickable="true"
                android:onClick="onButtonClick"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="3dp"
                android:textSize="20dp"
                android:fontFamily="@font/boogaloo_regular"
                android:background="@drawable/bg_tables_selector"
                android:text="7"/>

            <Button
                android:id="@+id/btn8"
                android:clickable="true"
                android:onClick="onButtonClick"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="3dp"
                android:textSize="20dp"
                android:fontFamily="@font/boogaloo_regular"
                android:background="@drawable/bg_tables_selector"
                android:text="8"/>

            <Button
                android:id="@+id/btn9"
                android:clickable="true"
                android:onClick="onButtonClick"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="3dp"
                android:textSize="20dp"
                android:fontFamily="@font/boogaloo_regular"
                android:background="@drawable/bg_tables_selector"
                android:text="9"/>

            <Button
                android:id="@+id/btn10"
                android:clickable="true"
                android:onClick="onButtonClick"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:fontFamily="@font/boogaloo_regular"
                android:background="@drawable/bg_tables_selector"
                android:text="10"/>








        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ress4">

    </ImageView>

</RelativeLayout>
